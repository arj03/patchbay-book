BookCard {
  cursor: pointer

  (img) {
    max-width: 100%
  }

  display: grid
  grid-template-columns: auto auto

  color: initial 
  :hover { text-decoration: none }

  div.details {
    border: 1px gainsboro solid
    border-right: none
    padding: 1rem

    h2 {
      font-size: 1.8rem
      margin-top: 0
    }
  }
}
